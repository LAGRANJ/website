<!DOCTYPE html>
<html>
  <head>
    <title>WEBSite</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <META http-equiv="X-UA-Compatible" content="IE=11">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyBKcSK9mvFfhn18QsS__ADNICzGzSxuFS8"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
  </head>
  <body>
    <div id="wrapper">
      <div class="overlay"></div>
      <!-- Sidebar -->
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand">
            <div style="position:relative;">
              <%= image_tag("logoShort.svg",:id=>"logoshort")%>
              <span style="position:absolute;margin-top:-5px;">
                <a class="menu-toggle" id="close-menu">
                  <span><%= image_tag("close.svg") %></span>
                </a>
              </span>
            </div>
          </li>
          <li>
            <%= link_to("Интернет банкинг",internetbank_path())%>
          </li>
          <li>
            <a href="#"><strong>КОРПОРАТИВНЫМ КЛИЕНТАМ</strong></a>
          </li>
          <li>
            <%= link_to("Кредиты", products_credit_purposes_path(2))%>
          </li>
          <li>
            <%= link_to("Депозиты", products_deposit_types_path(2))%>
          </li>
          <li>
            <%= link_to("Денежные переводы", products_transfer_types_path(2))%>
          </li>
          <li>
            <%= link_to("Сейфовые ячейки", products_depository_path(2))%>
          </li>
          <li>
            <a href="#">Зарплатные проекты</a>
          </li>
          <li>
            <a href="#"><strong>ЧАСТНЫМ КЛИЕНТАМ</strong></a>
          </li>
          <li>
            <%= link_to("Кредиты", products_credit_purposes_path(1))%>
          </li>
          <li>
            <%= link_to("Депозиты", products_deposit_types_path(1))%>
          </li>
          <li>
            <%= link_to("Денежные переводы", products_transfer_types_path(1))%>
          </li>
          <li>
            <a href="#">Платежные карты</a>
          </li>
          <li>
            <%= link_to("Сейфовые ячейки", products_depository_path(1))%>
          </li>
          <li>
            <a href="#"><strong>О НАШЕМ БАНКЕ</strong></a>
          </li>
          <li>
            <%= link_to("Руководство", management_path())%>
          </li>
          <li>
            <%= link_to("Филиалы и сберкассы", offices_path())%>
          </li>
          <li>
            <%= link_to("Новости", news_path())%>
          </li>
          <li>
            <%= link_to("Отчетность", reports_path())%>
          </li>
          <li>
            <%= link_to("Реквизиты", bankdetails_path())%>
          </li>
          <li>
            <%= link_to("Корреспондентская сеть", corraccounts_path())%>
          </li>
          <li>
            <a href="#">Вакансии</a>
          </li>
        </ul>
      </div>
      <!-- /#sidebar-wrapper -->
      <!-- Page Content -->
      <div id="page-content-wrapper">
        <div class="container">
          <div class = "row">
            <div class="hidden-xs">
              <%= image_tag("FKBLogo.svg",:id=>"mainlogo") %>
            </div>
          </div>
        </div>
        <%= render "shared/mainmenu" %>
        <div class="container">
        
          <%= yield :breadcrumbs %>
          <%= yield :header %>
          <div class="row">
            <div class = 'col-md-12 col-lg-12 hidden-xs hidden-sm'>
              <%= yield :bigbanners%>
            </div>
          </div>
          <div class="row">
            <%=yield%>
            <%=yield :sidebar%>
          </div>
          <div class="row">
            <div class = 'col-md-12 col-lg-12 hidden-xs hidden-sm'>
              <%= yield :footer%>
            </div>
          </div>
        </div>
        <div style="clear:both;width:100%"></div>
        <br>
        <%= render "shared/footer"%>
      </div>
    </div>
  </body>
</html>
