<div class="col-sm-6 col-md-6">
  <div class="thumbnail">
    <%= image_tag(transfer_type[:image_path], :style => "width: 100%;") %>
    <div class="caption">
      <h3 class="text-warning"><%= transfer_type[:name] %></h3>
      <p class="card-description"><strong><%=transfer_type[:description] %></strong></p>
      
      <p><%= link_to transfer_type[:link], :title => "Узнать больше", :class=> "btn btn-danger btn-large" do %>
          <i class="icon-ok"></i> Узнать больше
                     <% end %></p>
    </div>
  </div>
</div>