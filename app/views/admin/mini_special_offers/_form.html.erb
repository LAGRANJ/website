<%= form_for([:admin, mini_special_offer]) do |f| %>
  <% if mini_special_offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mini_special_offer.errors.count, "error") %> prohibited this mini_special_offer from being saved:</h2>
      <ul>
      <% mini_special_offer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">    
    <%= f.label :enabled, "Активный" %>
    <%= f.check_box :enabled, class:"form-control"%>
  </div>
  <div class="form-group">    
    <%= f.label :caption, "Заголовок" %>
    <%= f.text_field :caption, class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :creation_date, "Дата" %>
    <%= f.text_field :creation_date, class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :caption_text_color, "Цвет текста заголовка на банере" %>
    <%= f.text_field :caption_text_color, class:"form-control", type:"text"%>
  </div>
  <div class="form-group">
    <%= f.label :description_text_color, "Цвет текста описания на банере" %>
    <%= f.text_field :description_text_color, class:"form-control", type:"text"%>
  </div>
  <div class="form-group">
    <%= f.label :priority, "Приоритет(1-10)" %>
    <%= f.text_field :priority, class:"form-control", type:"number"%>
  </div>
  <div class="form-group">    
    <%= f.label :description, "Короткое описание" %>
    <%= f.text_field :description, class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :body, "Содержание" %>
    <%= f.text_area :body, class:"form-control", rows:25 %>
  </div>
   <div class="form-group">
    <label for="image">Изображение</label>
    <%= f.file_field :image %>
  </div>
  <div class="actions">    
    <%= f.submit %>
  </div>
<% end %>
