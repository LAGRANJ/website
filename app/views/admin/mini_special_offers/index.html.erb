<p id="notice"><%= notice %></p>
<%= link_to 'Добавить новый баннер мальго размера', new_admin_mini_special_offer_path %>
<table class = 'table table-hover'>
  <thead>
    <tr>
      <th>Дата</th>
      <th>Заголовок</th>
      <th>Короткое описание</th>
      <th>Приоритет</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @mini_special_offers.each do |mini_special_offer| %>
      <tr>
        <td><%= mini_special_offer.creation_date %></td>
        <td><%= mini_special_offer.caption %></td>
        <td><%= mini_special_offer.description %></td>
        <td><%= mini_special_offer.priority %></td>
        <td><%= link_to image_tag(mini_special_offer.image.url(:med)), mini_special_offer.image.url %></td>
        <td><%= link_to("Просмотр", admin_mini_special_offer_path(mini_special_offer)) %></td>
        <td><%= link_to("Изменить", edit_admin_mini_special_offer_path(mini_special_offer)) %></td>
        <td><%= link_to("Удалить", admin_mini_special_offer_path(mini_special_offer), method: :delete, data: { confirm: 'Вы действительно хотите удалить акцию?' }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>