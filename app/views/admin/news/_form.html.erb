<%= form_for([:admin, @newsitem],:url => (@newsitem.new_record? ? admin_newsitem_create_path : admin_newsitem_update_path(@newsitem))) do |f| %>
  <% if @newsitem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@newsitem.errors.count, "error") %> prohibited this newsitem from being saved:</h2>

      <ul>
      <% @newsitem.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">    
    <%= f.label :caption, "Заголовок" %>
    <%= f.text_field :caption, class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :creation_date, "Дата" %>
    <%= f.text_field :creation_date, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :priority, "Важность(1-10)" %>
    <%= f.text_field :priority, class:"form-control", type:"number"%>
  </div>
  <div class="form-group">    
    <%= f.label :description, "Короткое описание" %>
    <%= f.text_field :description, class:"form-control"%>
  </div>
  <div class="form-group">
    <label for="body">Содержание</label>
    <%= f.label :body, "Содержание" %>
    <%= f.text_area :body, class:"form-control", rows:25 %>
  </div>
  
  <div class="actions">
    <%= f.submit "Сохранить", class: "btn btn-primary" %>    
  </div>
<% end %>
