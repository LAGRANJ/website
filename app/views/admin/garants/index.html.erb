<p id="notice"><%= notice %></p>

<h1>Реализация залогового имущества</h1>

<%= link_to 'Добавить залоговое имущество', new_admin_garant_path %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Стоимость</th>
      <th>Место расположения</th>
      <th>Номер телефона</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @garants.each do |garant| %>
      <tr>
        <td><%= garant.name %></td>
        <td><%= garant.description %></td>
        <td><%= garant.cost %></td>
        <td><%= garant.region %></td>
        <td><%= garant.phone %></td>
        <td><%= link_to 'Показать', admin_garant_path(garant) %></td>
        <td><%= link_to 'Измнеить', edit_admin_garant_path(garant) %></td>
        <td><%= link_to 'Удалить', admin_garant_path(garant), method: :delete, data: { confirm: 'Вы действительно хотите удалить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

