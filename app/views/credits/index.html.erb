
<div class = "container">
  <% @credit_products.select{|prod| prod["TypeID"]==params[:credit_type].to_i}.each do |product| %>
    <div class = "row">
      <div class="col-md-9 col-lg-9 blogShort">
        <div class="rate">&le;<%=product["MinRate"]%></div>
        <h3 style="color: #d40000;"><%=product["Name"]%></h3>
        <article>
          <p>
            <%=product["Description"]%>
          </p>
        </article>
        <ul>
          <li>От <%=product["MinRate"]%> годовых</li>
          <li>До <%=product["MaxPeriod"]%> мес.</li>
          <li>До <%=product["MaxSumm"]%> сом</li>
          <%if product["IsMortgageProduct"] == 1%>
          <li>Нужен залог</li>
          <% end %>
          <%if product["IsTranchesAllowed"] == 1%>
          <li>Возможно выдача траншами</li>
          <% end %>
          <%if product["IsBusinessProduct"] == 1%>
          <li>Кредит для бизнеса</li>
          <% end %>
        </ul>
        <div style="float:right; margin-bottom:15px;"><a href="#" >Подробнее <i class="fa fa-chevron-right" aria-hidden="true"></i></a></div>
      </div>
    </div>
  <% end %>
</div>