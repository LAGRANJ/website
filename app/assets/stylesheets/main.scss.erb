#mainlogo{
  width: 100%;
};
#logoshort{
  width: 220px;
  margin-top:10px;
  margin-left:0px;
}

.date {
    background: #DC143C;
    height: 37px;
    width: 37px;
    color: #ffffff;
    font: normal 11px/10px Arial, Helvetica, sans-serif;
    text-align: center;
    border-radius: 100%;
    -moz-border-radius: 100%;
    -webkit-border-radius: 100%;
    padding: 8px 0 0;
    float: left;
}
.main_content {
    padding: 0px 25px 10px;
    overflow: hidden;    
}
.main_content2 {
    padding: 0px 0px 10px 15px;
    overflow: hidden;    
}
.news_list {
    padding: 14px 0 0;
    list-style: none;
}
.news_list li a, .main_news a {
    color: #131313;
    font: normal 14px/20px Arial, Helvetica, sans-serif;
    display: block;    
    padding: 0px 0 20px;
    margin-left: 60px;
    margin-bottom: 20px;
   	border-bottom: 1px solid #cdcdcd;
}
.main_news a {
    font-size: 18px;
    line-height: 22px;
    padding-bottom: 25px;
    width: 375px;
}
.banner {
	padding: 40px 0px 0px;
}

.banner {
	padding: 0px;
    height: 300px;
    overflow: hidden;
    position: relative;
    display: block;
    width: 100%;
}

._ac_ban {
    display: none;
}

.ac_ban {
    display: block;
}

img#kzt{
    width: 12px;

}
img#kgs_exch{
    width: 30px;
}
.rates_table{
    width:100%;
    font-size:14px;    
}
.rates_table tr td{
    border-bottom:1px solid #ddd;
}
.rates_table tr td.cur_sym{    
    color: #d40000;    
}
.rates_table tr td.rate{   
    text-align: right;    
    padding: 5px 0px;
}
.rates_table tr td b{
    padding-right: 30px;
}
.rates_table tr td span{
    padding-right: 30px;
}
body{margin-top:50px;}
.glyphicon { margin-right:10px; }
.panel-default > 
.panel-heading {
    background: #fff !important;
    color:#d40000;
}

.panel-body .table {margin-bottom: 0px; }

.ftrect {
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0,0,0,0.5); /* Параметры тени */
    padding: 0px; 
    height: 40px; 
    background: url(<%=image_url('fasttransfers.png')%>);
    background-repeat: no-repeat;
    float:left;
    margin-right:10px; 
    margin-top:3px; 
    width: 125px;  
}
.ftrect.a {
     width: 120px;
     height:40px;
     display: block;
}
.ftrect:hover {    
    box-shadow: 0 0 15px rgba(0,0,0,0.5); /* Параметры тени */
}
.ftrect:first-child{
    margin-left:50px;
}

.read_more {
    color: #5592fc;
    background-color: rgba(255,255,255,0.9);
    border-radius: 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    display: none;
    position: absolute;
    bottom: 40px;
    left: 30px;
    padding: 7px 15px 8px 24px;
}

.head_contacts {
    right: 25px;
    padding: 20px;
    width: 185px;
    top: 45px;
    background: rgba(200,200,200,0.45);
    position: absolute;
    right: 45px;
    color: #ffffff;
    padding: 25px 20px 20px 30px;
    width: 223px;
    top: 73px;
    border-radius: 15px;
    -moz-border-radius: 15px;
    -webkit-border-radius: 15px;
}

aside {
    margin: 0px;
    padding: 0px;
    display: block;
}

.main_office {
    padding: 10px 0 0;
}

.main_office span {
    font: normal 20px/24px Tahoma, sans-serif;
}

.phone {
    font: bold 16px Tahoma, sans-serif;
    display: block;
    padding: 17px 0 0;
}

.links_group {
    padding: 43px 0 0;    
}

.first_bg, .second_bg
{
    box-shadow: 0 0 15px rgba(0,0,0,0.5); /* Параметры тени */
    margin: 10px;
}
