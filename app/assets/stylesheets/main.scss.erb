#mainlogo{
  width: 100%;
};
#logoshort{
  width: 220px;
  margin-top:10px;
  margin-left:0px;
}

.date {
    background: #5c94de;
    height: 37px;
    width: 37px;
    color: #ffffff;
    font: normal 11px/10px Arial, Helvetica, sans-serif;
    text-align: center;
    border-radius: 100%;
    -moz-border-radius: 100%;
    -webkit-border-radius: 100%;
    padding: 8px 0 0;
    float: left;
}
.main_content {
    padding: 20px 25px 10px;
    overflow: hidden;    
}
.news_list {
    padding: 14px 0 0;
    list-style: none;
}
.news_list li a, .main_news a {
    color: #131313;
    font: normal 14px/20px Arial, Helvetica, sans-serif;
    display: block;    
    padding: 0px 0 20px;
    margin-left: 60px;
    margin-bottom: 20px;
   	border-bottom: 1px solid #cdcdcd;
}
.main_news a {
    font-size: 18px;
    line-height: 22px;
    padding-bottom: 25px;
    width: 375px;
}
.banner {
	padding: 40px 0px 0px;
}

.banner {
	padding: 0px;
    height: 300px;
    overflow: hidden;
    position: relative;
    display: block;
    width: 100%;
}

._ac_ban {
    display: none;
}

.ac_ban {
    display: block;
}

img#kzt{
    width: 12px;

}
img#kgs_exch{
    width: 40px;
}
.rates_table{
    width:100%;
    text-align:center;
    font-size:14px;
}
.rates_table tr td{
    border-bottom:1px solid #ddd;
}
.rates_table tr td.cur_sym{
    
    color: #d40000;
}
body{margin-top:50px;}
.glyphicon { margin-right:10px; }
.panel-default > 
.panel-heading {
    background: linear-gradient(to top, #d40000, #dd0000) !important;
    color:#fff;
}
.panel-body { padding:0px; }
.panel-body table tr td { padding-left: 15px }
.panel-body .table {margin-bottom: 0px; }

.ftrect {
    border-radius: 5px;
    border: 2px solid rgba(221, 221, 221, 0.5);
    padding: 0px; 
    height: 40px; 
    background: url(<%=image_url('fasttransfers.png')%>);
    background-repeat: no-repeat;
    float:left;
    margin-left:5px; 
    margin-top:3px;   
}
.ftrect:hover {
    border: 2px solid rgba(221, 221, 221, 1);
}